<Window x:Class="Minesweeper.Client.UI.Windows.ServerManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.Client.UI.Windows"
        mc:Ignorable="d"
        Title="ServerManager" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <GroupBox Header="Server Status">
            <TextBlock Name="StatusTextBlock" Text="Not Installed."/>
        </GroupBox>
        <Button Name="ServerStartButton" Content="Start Server" Margin="0,5,0,0" IsEnabled="False" Click="ServerStartButton_Click"/>
        <Button Name="ServerStopButton" Content="Stop Server" Margin="0,5,0,0" IsEnabled="False" Click="ServerStopButton_Click"/>
    </StackPanel>
</Window>
